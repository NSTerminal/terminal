        "${workspaceFolder}/main/3rdparty"
    ],
    "todo-tree.filtering.excludeGlobs": [
        "**/3rdparty"
    ],
    "cmake.configureOnOpen": true,
    "cmake.configureOnEdit": true,
    "cmake.sourceDirectory": "${workspaceFolder}/main",
    "cmake.buildDirectory": "${workspaceFolder}/main/build",
    "cmake.debugConfig": {
        "cwd": "${workspaceFolder}/main"
    },
