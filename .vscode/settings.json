{
    //"editor.formatOnType": true,
    "[python]": {
        "editor.rulers": [
            72,
            79
        ]
    },
    "[c]": {
        "editor.rulers": [
            120
        ]
    },
    "[cpp]": {
        "editor.rulers": [
            120
